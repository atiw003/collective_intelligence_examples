<p>
  <b>Name:</b>
  <%=h @user.name %>
</p>

<% unless @users.blank? %>

  <h2>Compare it with</h2>

  <% for algorithm in @algorithms %>

    <h3> Using the <%= algorithm.to_s.humanize  %> algorithm </h3>

    <ul>
      <% for user in @users %>
        <li> <%= link_to user, compare_user_ratings_path( :users => "#{@user.id},#{user.id}", :algorithm => algorithm )%>  </li>
      <% end  %>
    </ul>

  <% end  %>




<% end %>






<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
